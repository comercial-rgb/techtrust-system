# ============================================
# TECHTRUST AUTOSOLUTIONS - ENVIRONMENT VARIABLES
# ============================================
# Copie este arquivo para .env e preencha os valores

# ============================================
# DATABASE
# ============================================
DATABASE_URL="postgresql://techtrust_user:techtrust123@localhost:5432/techtrust_dev"

# ============================================
# SERVER
# ============================================
NODE_ENV=development
PORT=3000
API_VERSION=v1

# ============================================
# JWT
# ============================================
# IMPORTANTE: Use uma string aleatória segura em produção
# Gere com: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=sua-chave-secreta-super-segura-minimo-32-caracteres-aqui
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=sua-chave-refresh-super-segura-diferente-da-outra
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# BCRYPT
# ============================================
BCRYPT_ROUNDS=10

# ============================================
# STRIPE (Pagamentos)
# ============================================
# Obtenha em: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_sua_chave_aqui
STRIPE_PUBLISHABLE_KEY=pk_test_sua_chave_aqui
STRIPE_WEBHOOK_SECRET=whsec_sua_chave_aqui

# IDs dos produtos/preços do Stripe
STRIPE_PRICE_BASIC=price_basic_id
STRIPE_PRICE_PREMIUM=price_premium_id

# ============================================
# TWILIO (SMS)
# ============================================
# Obtenha em: https://console.twilio.com/
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=sua_auth_token_aqui
TWILIO_PHONE_NUMBER=+15555551234
TWILIO_VERIFY_SERVICE_SID=VAxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================
# GOOGLE MAPS
# ============================================
# Obtenha em: https://console.cloud.google.com/
GOOGLE_MAPS_API_KEY=AIzaxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================
# FIREBASE (Push Notifications)
# ============================================
# Baixe o JSON do Firebase Console e cole o caminho
FIREBASE_SERVICE_ACCOUNT_PATH=./config/firebase-service-account.json
# Ou cole o JSON completo (em produção use secrets)
FIREBASE_SERVICE_ACCOUNT_JSON={}

# ============================================
# CLOUDINARY (Imagens - Opcional)
# ============================================
CLOUDINARY_CLOUD_NAME=sua_cloud_name
CLOUDINARY_API_KEY=sua_api_key
CLOUDINARY_API_SECRET=sua_api_secret

# ============================================
# REDIS (Cache & Queues)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# EMAIL (SendGrid - Opcional para MVP)
# ============================================
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxx
SENDGRID_FROM_EMAIL=noreply@techtrust.app
SENDGRID_FROM_NAME=TechTrust AutoSolutions

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# CORS
# ============================================
CORS_ORIGIN=http://localhost:3000,http://localhost:19006
# Em produção: https://app.techtrust.com,https://www.techtrust.com

# ============================================
# LOGS
# ============================================
LOG_LEVEL=debug
# Valores: error, warn, info, http, verbose, debug, silly

# ============================================
# BUSINESS RULES (Configuráveis)
# ============================================
# Comissão da plataforma
COMMISSION_PERCENTAGE=15
COMMISSION_SUBSCRIPTION_PRICE=39.99
COMMISSION_SUBSCRIPTION_PERCENTAGE=5

# Cancelamentos
CANCELLATION_FEE_BEFORE_24H=10
CANCELLATION_FEE_WITHIN_24H=25

# Orçamentos
QUOTE_RESPONSE_TIME_HOURS=2
QUOTE_MAX_PER_REQUEST=5
QUOTE_VALIDITY_HOURS=48

# Pedidos
REQUEST_EXPIRATION_HOURS=24
SEARCH_RADIUS_INITIAL_KM=25
SEARCH_RADIUS_MAX_KM=80

# Fornecedor
PROVIDER_PAYOUT_DAYS=2
PROVIDER_VERIFICATION_REQUIRED=true

# Disputas
DISPUTE_WINDOW_HOURS=48

# ============================================
# DEVELOPMENT / DEBUG
# ============================================
DEBUG=techtrust:*
MOCK_TWILIO=false
MOCK_STRIPE=false
SKIP_EMAIL_VERIFICATION=true
